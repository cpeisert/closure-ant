@def DEFAULT_TEXT_COLOR black;
@def JSON_BOOLEAN_COLOR DEFAULT_TEXT_COLOR;
@def JSON_NULL red;
@def JSON_NUMBER_COLOR darkorange;
@def JSON_PROPERTY_COLOR blue;
@def JSON_STRING_COLOR darkgreen;

.goog-jsonprettyprinter-propertyname {
  color: JSON_PROPERTY_COLOR;
}

.goog-jsonprettyprinter-propertyvalue-string {
  color: JSON_STRING_COLOR;
}

.goog-jsonprettyprinter-propertyvalue-number {
  color: JSON_NUMBER_COLOR;
}

.goog-jsonprettyprinter-propertyvalue-boolean {
  color: JSON_BOOLEAN_COLOR;
}

.goog-jsonprettyprinter-propertyvalue-null {
  color: JSON_NULL;
}
