@import "json-styles.gss";

@def CONTENT_WIDTH 350px;
@def DEFAULT_FONT sans-serif;
@def DEFAULT_FONT_SIZE 1em;
@def LEFT_MARGIN 15px;
@def TEXT_COLOR rgb(34, 34, 34);


html, button, input, select, textarea {
  font-family: DEFAULT_FONT;
  color: TEXT_COLOR;
}

body {
  margin: LEFT_MARGIN;
  font-size: DEFAULT_FONT_SIZE;
  line-height: 1.4;
}

.error {
  color: red;
  font-weight: bold;
}

#mainContent {
  width: CONTENT_WIDTH;
}