@import "json-styles.gss";

@def BG_COLOR #f2f7f5;
@def BG_COLOR_ALT white;
@def BORDER_STYLE solid black 1px;
@def FONT sans-serif;
@def FONT_SIZE 1em;
@def LEFT_MARGIN 15px;
@def TEXT_COLOR black;
@def WIDTH_MAIN 350px;
@def WIDTH_MARGIN 20px;
@def WIDTH_STYLE 300px;
@def WIDTH_BODY add(WIDTH_MAIN, WIDTH_MARGIN, WIDTH_STYLE);


html, button, input, select, textarea {
  font-family: FONT;
  color: TEXT_COLOR;
}

body {
  background-color: BG_COLOR;
  font-size: FONT_SIZE;
  line-height: 1.4;
  margin: 0px auto;
  width: WIDTH_BODY;
}

button {
  display: block;
  font-size: mult(FONT_SIZE, 1.1);
  font-weight: bold;
  margin-bottom: 10px;
}

h1, h2, h3, h4 {
 text-align: center;
}

textarea {
  margin-bottom: 15px;
}

.colorPopup {
  position:absolute;
  background-color: BG_COLOR_ALT;
  color:TEXT_COLOR;
  visibility:hidden;
  width:100px;
  height:100px;
  font-size: 80%;
  border: BORDER_STYLE;
  -moz-outline:0;
  outline:0;
}

.error {
  color: red;
  font-weight: bold;
}

.standout {
  background-color: BG_COLOR_ALT;
  border: BORDER_STYLE;
}

.strong {
  font-weight: bold;
}

.tip {
  font-size: 0.75em;
  font-style: italic;
}

#customizeStyles {
  float: right;
  width: WIDTH_STYLE;
}

#mainContent {
  align: left;
  float: left;
  margin-right: WIDTH_MARGIN;
  width: WIDTH_MAIN;
}