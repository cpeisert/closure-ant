<!--
================================================================================
  Minimal AntUnit test for SoyTask just to make sure it has been properly
  added to closure-ant-tasks. The actual integration tests are located in the
  closure-ant-tasks project. 
================================================================================
-->
<project name="SoyTaskMiniTest" default="test">

  <dirname property="antunit.dir" file="${ant.file.SoyTaskMiniTest}" />

  <property name="test.dir" location="${antunit.dir}/.." />
  <property name="test.build.dir" location="${test.dir}/build" />  
  <property name="test.lib.dir" location="${test.dir}/lib" />
  <import file="${test.lib.dir}/antunit.xml" />

  <property name="closure-ant-tasks.dir" location="${test.dir}/.." />
  <property name="closure-ant-tasks.build.dir"
      location="${closure-ant-tasks.dir}/build" />
  <property name="closure-tools-config.xml"
      location="${closure-ant-tasks.build.dir}/closure-tools-config.xml" />
  <import file="${closure-tools-config.xml}" />

  <!-- Test projects. -->
  <property name="test_projects.dir" location="${test.dir}/test_projects" />
  <property name="plovr_soyweb.dir"
      location="${test_projects.dir}/plovr_soyweb" />
  <property name="plovr_soyweb.output.dir"
      location="${test.build.dir}/antunit/plovr_soyweb" />

  
  <!--
  =============================================================================
    Set up and tear down
  =============================================================================
  -->

  <!-- Executed once for this test suite before all other targets. -->
  <target name="suiteSetUp">
    <mkdir dir="${test.build.dir}" />
    <mkdir dir="${plovr_soyweb.output.dir}" />
  </target>

  <!--
  =============================================================================
    AntUnit Tests
  =============================================================================
  -->

  <target name="testCompileToJs">
    <soy cssHandlingScheme="goog">
      <soyfileset dir="${plovr_soyweb.dir}" includes="**/*.soy" />
      <compiletojs
          codeStyle="concat"
          outputPathFormat="${plovr_soyweb.output.dir}/{INPUT_FILE_NAME_NO_EXT}.js"
          shouldGenerateJsdoc="true"
          shouldProvideRequireSoyNamespaces="true" />
    </soy>

    <assertFileExists file="${plovr_soyweb.output.dir}/settings.js" />
    <assertFileExists file="${plovr_soyweb.output.dir}/tasks.js" />
    <assertFileExists file="${plovr_soyweb.output.dir}/tasks2.js" />
  </target>
  

  <!-- Run this test suite. -->
  <target name="test">
    <antunit>
      <plainlistener loglevel="info" />
      <file file="${antunit.dir}/SoyMiniTest.xml" />
    </antunit>
  </target>

</project>
