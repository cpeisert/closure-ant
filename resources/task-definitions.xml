<antlib>
  <taskdef name="builder-plus"
      classname="org.closureextensions.ant.BuilderPlusTask" />

  <taskdef name="closure-builder-python"
      classname="org.closureextensions.ant.ClosureBuilderPythonTask" />

  <!-- Closure Compiler task synonyms: closure-compiler or jscomp -->
  <taskdef name="closure-compiler"
      classname="org.closureextensions.ant.ClosureCompilerTask" />
  <taskdef name="jscomp"
      classname="org.closureextensions.ant.ClosureCompilerTask" />

  <!-- Closure Linter task synonyms: closure-linter or gjslint -->
  <taskdef name="closure-linter"
      classname="org.closureextensions.ant.ClosureLinterTask" />
  <taskdef name="gjslint"
      classname="org.closureextensions.ant.ClosureLinterTask" />

  <!-- Closure Stylesheets task synonyms: closure-stylesheets or stylesheets -->
  <taskdef name="closure-stylesheets"
      classname="org.closureextensions.ant.ClosureStylesheetsTask" />
  <taskdef name="stylesheets"
      classname="org.closureextensions.ant.ClosureStylesheetsTask" />

  <!-- Closure Templates task synonyms: closure-templates or soy  -->
  <taskdef name="closure-templates"
      classname="org.closureextensions.ant.SoyTask" />
  <taskdef name="soy" classname="org.closureextensions.ant.SoyTask" />

  <taskdef name="deps-writer"
      classname="org.closureextensions.ant.DepsWriterTask" />

  <taskdef name="deps-writer-python"
      classname="org.closureextensions.ant.DepsWriterPythonTask" />

  <taskdef name="plovr" classname="org.closureextensions.ant.PlovrTask" />

  <taskdef name="plovr-soyweb"
      classname="org.closureextensions.ant.PlovrSoyWebTask" />
</antlib>
